= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    %br
    = f.text_field :title
  %br
  .field
    = f.label :teaser
    = f.cktext_area :teaser
  %br
  .field
    = f.label :content
    = f.cktext_area :content
  %br
  .actions
    = f.submit 'Save'
