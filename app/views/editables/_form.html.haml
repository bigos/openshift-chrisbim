= form_for @editable do |f|
  - if @editable.errors.any?
    #error_explanation
      %h2= "#{pluralize(@editable.errors.count, "error")} prohibited this editable from being saved:"
      %ul
        - @editable.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.cktext_area :content
  .actions
    %br
    = f.submit 'Save'
