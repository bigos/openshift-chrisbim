= form_for @slide, :html => { :multipart => true } do |f|
  - if @slide.errors.any?
    #error_explanation
      %h2= "#{pluralize(@slide.errors.count, "error")} prohibited this slide from being saved:"
      %ul
        - @slide.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :caption
    = f.text_field :caption
  .field
    = f.label :position
    = f.number_field :position
  .field
    = f.label :visible
    = f.check_box :visible
  - if new_slide
    .field
      = f.label :photo
      = f.file_field :photo
  .actions
    = f.submit 'Save'
